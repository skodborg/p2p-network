extends layout


block content

  h1 #{thisPeer.id}
  .peerInformation(id="pred")
    h2 Predecessor
    .id #{pred.id}
    .ip #{pred.ip}
    .port #{pred.port}
    .link 
      a(href="http://#{pred.ip}:#{pred.port}") Click here

  .peerInformation(id="succ")
    h2 successor
    .id #{succ.id}
    .ip #{succ.ip}
    .port #{succ.port}
    .link 
      a(href="http://#{succ.ip}:#{succ.port}") Click here

  .joinForm
    form(id="join")
      .ipInput
        p Ip:
        input(type="text", name="ip", value="localhost")
      .portInput
        p Port:
        input(type="text", name="port", value="4000")
      .action
        input(type="submit", value="Join Peer")

  .stabilize
      input(type="submit" value="stabilize" id="stabilize")

  .fixfingers
      input(type="submit" value="fixfingers" id="fixfingers")

  .findID
    form(id="findID")
      .inputId
        p Search for id:
        input(name="id")
      .action
        input(type="submit", value="SEARCH")
    .findIDResult

  .leave
    input(type="submit" value="leave ring" id="leave")

  .fingerTable
    table
      tr
        td FINGERID
        td IP
        td PORT
        td ID
      for entry in fingerTable
        - if(typeof(entry) !== 'undefined'){
          tr
            td #{entry.fingerID}
            td #{entry.ip}
            td #{entry.port}
            td #{entry.id}
        - }


